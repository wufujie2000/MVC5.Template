@using MvcTemplate.Resources.Views.AccountResetView

@model AccountResetView

<div class="title text">@ContentTitles.AuthReset</div>
<div class="separator"></div>

@using (Html.BeginForm())
{
    @Html.Partial("_AuthAlerts")

    @Html.AntiForgeryToken()
    <div class="auth-content">
        <div class="input-group">
            <span class="fa fa-lock"></span>
            @Html.PasswordFor(model => model.NewPassword, new { autocomplete = "off", placeholder = Titles.NewPassword })
        </div>
    </div>
    <input class="btn btn-primary" type="submit" value="@Resource.Submit" />
}

<div class="separator"></div>