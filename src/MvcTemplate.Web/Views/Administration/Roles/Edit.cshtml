@model RoleView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="widget-header-icon fa fa-th-list"></span>
            <h5>@Headers.Role</h5>
            <div class="widget-header-buttons">
                @if (Html.IsAuthorizedFor("Details"))
                {
                    <a class="btn" href="@Url.Action("Details", new { Model.Id })">
                        <i class="fa fa-info"></i><span class="text">@Actions.Details</span>
                    </a>
                }
                @if (Html.IsAuthorizedFor("Delete"))
                {
                    <a class="btn" href="@Url.Action("Delete", new { Model.Id })">
                        <i class="fa fa-times"></i><span class="text">@Actions.Delete</span>
                    </a>
                }
            </div>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Title)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Title)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Permissions)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.JsTreeFor(model => model.Permissions)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Permissions)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-xs-12 col-lg-7">
                        <button type="submit" class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
