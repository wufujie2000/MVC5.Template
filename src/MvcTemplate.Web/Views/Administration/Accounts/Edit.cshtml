@model AccountEditView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Headers.Account</h5>
            <div class="widget-header-buttons">
                @if (Html.IsAuthorizedFor("Details"))
                {
                    <a class="btn" href="@Url.Action("Details", new { Model.Id })">
                        <span class="fa fa-info"></span><span class="text">@Actions.Details</span>
                    </a>
                }
            </div>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Username)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Username)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Email)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Email)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.IsLocked)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.CheckBoxFor(model => model.IsLocked)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.IsLocked)
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.RoleId)
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.DatalistFor(model => model.RoleId, new MvcDatalist<Role, RoleView>(Url))
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.RoleId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-xs-12 col-lg-7">
                        <button type="submit" class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
